<!DOCTYPE html>
<html lang="<%- config.language || 'en' %>">
  <%- partial('_partial/head') %>
  <body>
    <div class="wrapper">
      <%# navbar %> 
      <%- partial('_partial/nav.ejs') %> 
      <%# search content %>
      <div 
        id="local-search" 
        style="display: none">
        <input
          class="navbar-menu-item"
          id="search-input"
          placeholder="请输入搜索内容..." />
        <div id="search-content"></div>
      </div>
      <%# main content %>
      <div class="section-wrap">
        <div class="container">
          <div class="columns">
            <!-- Left sidebar toggle button -->
            <button class="sidebar-toggle left-toggle" id="left-sidebar-toggle">
              <span>点击查看分类和标签</span>
            </button>
            
            <!-- Left sidebar -->
            <aside class="left-column" id="left-sidebar">
              <%# author card %>
              <div class="card card-author">
                <%- partial('_partial/author') %>
              </div>
              <%# sticky-tablet %> <%- partial('_partial/left-aside') %>
            </aside>
            
            <main class="main-column">
              <%- body %>
            </main>
            
            <!-- Right sidebar -->
            <aside class="right-column" id="right-sidebar">
              <%- partial('_partial/right-aside') %>
            </aside>
            
            <!-- Right sidebar toggle button -->
            <button class="sidebar-toggle right-toggle" id="right-sidebar-toggle">
              <span>点击查看目录</span>
            </button>
          </div>
        </div>
      </div>
    </div>
    <%# footer %> 
    <%- partial('_partial/footer.ejs') %> 
    <%- partial('_partial/scrollbutton.ejs') %> 
    <%# plugins %> 
    <% if(theme.latex.enable) { %> 
      <%- partial('_partial/plugins/latex.ejs') %> 
    <% } %> 
    <% if(theme.lightbox.enable && is_post()) { %> 
      <%- partial('_partial/plugins/lightbox.ejs') %> 
    <% } %> 
    <%# javascript %> 
    <%- ex_js(url_for('/js/main.js')) %> 
    <% if(theme.footer.statistics.enable && theme.footer.statistics.type === 'busuanzi') { %>
      <script> 
        loadScript('<%= url_for(theme.cdn.busuanzi) %>') 
      </script>
    <% } %> 
    <% if(theme.lazyload.enable) { %>
      <script>
        var addLazyload = function () {
          var observer = lozad('.lozad', {
            load: function (el) {
              el.srcset = el.getAttribute('data-src')
            },
            loaded: function (el) {
              el.classList.add('loaded')
            },
          })
          observer.observe()
        }
      </script>
      <script>
        loadScript('<%= url_for(theme.cdn.lozad) %>', addLazyload)
      </script>
    <% } %>
    <script src="//instant.page/5.1.0" type="module"
      integrity="sha384-by67kQnR+pyfy8yWP4kPO12fHKRLHZPfEsiSXR8u2IKcTdxD805MGUXBzVPnkLHw"></script>
    <% if(theme.analytics.enable && theme.analytics.type === 'google' && theme.analytics.google.id) { %>
      <script>
        var googleAnalytics = function () {
          window.dataLayer = window.dataLayer || []
          function gtag() {
            dataLayer.push(arguments)
          }
          gtag('js', new Date())
          gtag('config', '<%= theme.analytics.google.id %>')
        }
    </script>
      <script>
        loadScript(
          'https://www.googletagmanager.com/gtag/js?id=' +
            '<%= theme.analytics.google.id %>',
          googleAnalytics
        )
      </script>
    <% } %>
    <% if(theme.search && theme.search.enable && theme.search.path) { %>
      <script>
        setTimeout(() => {localSearch("<%= theme.search.path || 'search.json' %>")}, 0)
      </script>
    <% } %>
    
    <!-- Sidebar toggle script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const leftToggle = document.getElementById('left-sidebar-toggle');
        const rightToggle = document.getElementById('right-sidebar-toggle');
        const leftSidebar = document.getElementById('left-sidebar');
        const rightSidebar = document.getElementById('right-sidebar');
        
        // Load saved states from localStorage
        const leftSidebarState = localStorage.getItem('left-sidebar-state') || 'closed';
        const rightSidebarState = localStorage.getItem('right-sidebar-state') || 'open';
        
        // Apply initial states
        if (leftSidebarState === 'open') {
          leftSidebar.classList.add('expanded');
        }
        
        // 右边栏默认展开
        if (rightSidebarState === 'open' || !rightSidebarState) {
          rightSidebar.classList.add('expanded');
        }
        
        // Toggle left sidebar
        leftToggle.addEventListener('click', function() {
          leftSidebar.classList.toggle('expanded');
          if (leftSidebar.classList.contains('expanded')) {
            localStorage.setItem('left-sidebar-state', 'open');
          } else {
            localStorage.setItem('left-sidebar-state', 'closed');
          }
        });
        
        // Toggle right sidebar
        rightToggle.addEventListener('click', function() {
          rightSidebar.classList.toggle('expanded');
          if (rightSidebar.classList.contains('expanded')) {
            localStorage.setItem('right-sidebar-state', 'open');
          } else {
            localStorage.setItem('right-sidebar-state', 'closed');
          }
        });
        
        // Close sidebars when clicking outside
        document.addEventListener('click', function(event) {
          // Close left sidebar when clicking outside of it
          if (leftSidebar.classList.contains('expanded') && 
              !leftSidebar.contains(event.target) && 
              !leftToggle.contains(event.target)) {
            leftSidebar.classList.remove('expanded');
            localStorage.setItem('left-sidebar-state', 'closed');
          }
          
          // Close right sidebar when clicking outside of it
          if (rightSidebar.classList.contains('expanded') && 
              !rightSidebar.contains(event.target) && 
              !rightToggle.contains(event.target)) {
            rightSidebar.classList.remove('expanded');
            localStorage.setItem('right-sidebar-state', 'closed');
          }
        });
      });
    </script>
  </body>
</html>